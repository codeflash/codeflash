<%= form_for(achievement) do |f| %>
  <% if achievement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(achievement.errors.count, "error") %> prohibited this achievement from being saved:</h2>

      <ul>
      <% achievement.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => "input-xlarge" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => "input-block-level" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :point_value, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :point_value, :class => "input-xlarge" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.submit 'Submit', :class => "btn btn-primary" %> <%= link_to 'Back', achievement, :class => 'btn' %>
  </div>
<% end %>
