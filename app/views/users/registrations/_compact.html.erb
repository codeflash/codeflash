<div class= "well well-small compact-form">
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <legend>Sign Up</legend>
    <%= f.input :email,
      input_html: {class: 'input-xlarge', placeholder: 'Email'},
      label: false %>
    <%= f.input :username,
      input_html: {class: 'input-xlarge', placeholder: 'Username'},
      label: false %>
    <%= f.input :password,
      input_html: {class: 'input-xlarge', placeholder: 'Password'},
      label: false %>
    <%= f.input :password_confirmation,
      input_html: {class: 'input-xlarge', placeholder: 'Password confirmation'},
      label: false %>
    <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
  <% end %>
</div>
