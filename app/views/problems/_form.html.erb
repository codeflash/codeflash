<%= simple_form_for(problem) do |f| %>
  <%= f.input :name,
      input_html: { class: 'input-xlarge' } %>
  <%= f.input :shortname,
      input_html: { class: 'input-xlarge' } %>
  <%= f.input :description,
    input_html: { class: 'input-block-level', rows: 10} %>
  <%= f.input :tags,
    input_html: { name: "tags",
                  value:display_tags(problem.tags),
                  id: "tags",
                  class: 'input-xlarge'}%>
  <%= f.input :points,
    input_html: { class: 'input-xlarge', min: '1' }  %>
  <%= f.button :submit, class: 'btn btn-primary' %>
  <%= link_to 'Back', back_path, :class => 'btn' %>
<% end %>
<script>
  $("#tags").select2({tags:<%== Tag.all.map{|x| x.name} %>, placeholder: "Choose tags"});
</script>