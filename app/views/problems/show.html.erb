<style type="text/css">
    <%== Pygments.css('.highlight', {:style => "monokai"}) %>
</style>
<h1>
  <%= @problem.problem_name %>
  <span class="muted">(<%= @problem.point_value %> points)</span>
</h1>

<p><%= @problem.description %></p>

<hr>

<ul>
<% @problem.solutions.each do |solution| %>
  <%= render 'solutions/compact', solution: solution %>
<% end %>
</ul>

<%= link_to 'New Solution', new_problem_solution_path(@problem) %> |
<%= link_to 'Edit', edit_problem_path(@problem) %> |
<%= link_to 'Destroy', @problem, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', problems_path %>

<h2>Comments</h2>
<%= render 'comments/show', comments: @problem.comments%>
<%= render 'comments/form', form_array: [@problem, @problem.comments.build] %>
