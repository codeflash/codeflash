<h1>
  <%= @problem.name %>
  <span class="muted">(<%= @problem.points %> points)</span>
</h1>

<p><%= @problem.description %></p>

<hr>

<ul id="solutions">
  <%= render 'solutions/solutions' %>
</ul>

<%= link_to 'New Solution', new_problem_solution_path(@problem) %> |
<%= link_to 'Edit', edit_problem_path(@problem) %> |
<%= link_to 'Destroy', @problem, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', problems_path %>

<!-- Hide the code view by default -->
<script type="text/javascript">
    $('.hide').hide();
</script>

<link rel="stylesheet" href="/assets/highlight.js/styles/monokai.css">
<script src="/assets/highlight.js/highlight.pack.js"></script>
<script>hljs.initHighlightingOnLoad();</script>

<h2>Comments</h2>
<%= render 'comments/show', comments: @problem.comments%>
<%= render 'comments/form', form_array: [@problem, @problem.comments.build] %>
