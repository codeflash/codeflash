<% @problems.each do |problem| %>
  <div class="row-fluid well well-small">
    <div class="span3">
      <%= link_to problem.problem_name, problem %>
      <span class="muted">(<%= problem.point_value %> points)</span>
    </div>
    <div class="span9">
      <%= problem.description %>
    </div>
  </div>
<% end %>

<%= link_to 'New Problem', new_problem_path %>
