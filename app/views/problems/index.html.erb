<%= render_breadcrumbs %>
<div>
  <!-- toolbar -->
  <span class="pull-right">
    <ul class="nav nav-pills">
      <li class="active"><a href="#">Recent</a></li>
      <li><a href="#">Popular</a></li>
      <li><a href="#">Trending</a></li>
      <li><input type="text" class="input-medium search-query pull-right" placeholder="Search"></li>
    </ul>
  </span>

  <!-- header -->
  <h1>Problems</h1>

</div>

<div class="row-fluid">

  <!-- categories -->
  <div class="span3">
    <ul class="nav nav-list well well-small">
      <li class="nav-header">Tags</li>
      <li <%if @tag_id == 0 %> class="active" <%end%>><a data-remote="true" href="/problems">All</a></li>
      <% @tags.each do |tag| %>
        <li<%if @tag_id == tag.id %> class="active" <%end%>><a data-remote="true" href="/problems?tag=<%=tag.id%>"><%=tag.name%></a></li>
      <% end %>
    <ul>
  </div>

  <!-- problem list -->
  <div class="span9" id="problems">
    <%= render partial: 'problems' %>
  </div>


</div>
