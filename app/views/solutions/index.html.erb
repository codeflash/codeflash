<style type="text/css">
    <%== Pygments.css('.highlight', {:style => "monokai"}) %>
</style>
<div>

  <!-- toolbar -->
  <span class="pull-right">
    <ul class="nav nav-pills">
      <li class="active"><a href="#">Recent</a></li>
      <li><a href="#">Popular</a></li>
      <li><a href="#">Trending</a></li>
      <li><input type="text" class="input-medium search-query pull-right" placeholder="Search"></li>
    </ul>
  </span>

  <!-- header -->
  <h1>Solutions<%= " for #{@problem.name}" if !@problem.nil? %></h1>

</div>

<div class="row-fluid">

  <!-- languages -->
  <div class="span3">
    <ul class="nav nav-list well well-small">
      <li class="nav-header">Languages</li>
      <li class="active"><a href="#">All</a></li>
      <% Language.all.each do |language| %>
          <% if @problem.nil? %>
            <% solutions = Solution.all %>
          <% else %>
            <% solutions = @problem.solutions %>
          <% end %>
          <%# num = solutions.find_all{|s| s.language == language}.count %>
          <% num = 4 %>
	  <% if num != 0 %>
            <li><a href="#"><%= "#{language.name} (#{num})" %></a></li>
          <%end%>
       <% end %>
    </ul>
  </div>

  <!-- problem list -->
  <div class="span9">
    <% @solutions.each do |solution| %>
      <%= render 'solutions/compact', solution: solution %>
    <% end %>
    <div class="pagination-centered">
      <%= will_paginate @solutions %>
    </div>
  </div>
</div>
