<% css_id = SecureRandom.uuid %>

<div class="solution well well-small" onclick="$('#<%= css_id %>').slideToggle()">
  <span class="pull-right">submitted by: <%= link_to User.find(solution.profile.user).username, solution.profile %></span>
  <%= solution.votes %>
  <%= link_to solution.problem.name, problem_solution_path(solution.problem, solution) %>
  <% if !params[:problem_id] %>
    - <%= solution.language.name %>
  <% end %>
</div>

<div class="hide code-container" id="<%= css_id %>">
  <%==
       begin
         Pygments.highlight(solution.code, lexer: solution.language.syntax_highlighting)
       rescue
         Pygments.highlight(solution.code)
       end
  %>
</div>
