<%= render 'compact', solution: @solution, index: 0, collapsed: false%>

<%= link_to 'Edit', edit_problem_solution_path(@problem,@solution) %> |
<%= link_to 'Destroy', problem_solution_path(@problem, @solution), method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', solutions_path %>
<style>
.solution:hover{
  cursor:default;
  border: none;
  box-shadow: none;
}
</style>

<%= render 'comments/show', comments: @solution.comments %>
<%= render 'comments/form', form_array: [@problem, @solution, @solution.comments.build] %>

<script>
  $('.hide').show()
</script>
