<%= simple_form_for(profile) do |f| %>
  <%= simple_fields_for user do |user_form| %>
    <%= user_form.input :username,
      input_html: { class: 'input-xlarge' } %>
  <% end %>
  <%= f.input :name,
    input_html: { class: 'input-xlarge' } %>
  <%= f.input :about_me,
    input_html: { class: 'input-block-level', maxlength:750, rows: 10 } %>
  <%= f.association :language,
    collection: Language.all,
    input_html: {"data-placeholder" => "Choose a Language...",
      class: "input-xlarge chzn-select"} %>
  <%= f.input :github,
    input_html: { class: 'input-xlarge' } %>
  <%= f.button :submit, class: 'btn btn-primary' %>
  <%= link_to 'Back', back_path, :class => 'btn' if !back_path.blank? %>
<% end %>