<%= simple_form_for get_flag_path(@problem, @solution, @comment, @flag), :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :profile_id %>
  <%= f.input :reason %>
  <%= f.input :explanation %>
  <%= f.input :flaggable_id %>
  <%= f.input :flaggable_type %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                @path, :class => 'btn' %>
  </div>
<% end %>
