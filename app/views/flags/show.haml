- model_class = Flag
.page-header
  %h1= t '.title', :default => model_class.model_name.human
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:profile_id)
      \:
  %dd= link_to @flag.profile.user.username, profile_path(@flag.profile.user.username)
  %dt
    %strong
      = model_class.human_attribute_name(:reason)
      \:
  %dd= @flag.reason
  %dt
    %strong
      = model_class.human_attribute_name(:explanation)
      \:
  %dd= @flag.explanation
  %dt
    %strong
      = model_class.human_attribute_name(:flaggable_id)
      \:
  %dd= @flag.flaggable_id
  %dt
    %strong
      = model_class.human_attribute_name(:flaggable_type)
      \:
  %dd= @flag.flaggable_type
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), |
    @path, :class => 'btn'                                   |
  -#
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
    get_flag_path(@problem, @solution, @comment, @flag),                                                         |
    :method => 'delete',                                                                                         |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
    :class => 'btn btn-danger'                                                                                   |
